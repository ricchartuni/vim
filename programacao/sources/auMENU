 " colocando parametros char: --- Basta presionar <F8>
map <F8> :call ParamSTR()<CR>
function! ParamSTR()
    r! echo -e "
\  parameter: TESTE_STR\n
\  text: \" << XXXINITXXX >> Chave para teste de string\"\n
\  mouse_text: \"\"\n
\  type: typein:\n
\  type_desc: ( string: 80 )\n
\  value: \"\"\n
\  showp: nil\n
\;;; ........................................................\n
\"
    call SUBS_name_init()
endfunction

"===================================================================
" ATALHO --- MENU -----------------------------------------
"===================================================================
map <F9> :call StandAlone()<CR>
function! StandAlone()
    r! echo -e "
\               (\"UTIL\"\n
\                 (\"SPECIAL\"\n
\                   (\"TOOLTYPE\" implicit: \"STAND_ALONE\")\n
\                   (\"PATHNAME\" implicit: \"util.exe\")\n
\                 )\n
\                 (\"GENERAL\"\n
\                   (\"TASK\" implicit: \"UNIXCOMM\")\n
\                   (\"TYPEITIN\" implicit: 1)\n
\                   (\"TYPECOMM\" implicit:\n
\                    (string_concatinate\n
\                      \"echo -e \\\"\"\n
\                       \"  ** XXXINITXXX>> =======================___ZZZ_ZZZ___\\\n\"\n
\                       \"  ** XXXINITXXX>> Teste de passagem 00000___ZZZ_ZZZ___\\\n\"\n
\                       \"  ** XXXINITXXX>> =======================___ZZZ_ZZZ___\\\n\"\n
\                       \"\\\"\\\n\"\n
\                    )\n
\                   )\n
\                   (\"PICKCOMM\" implicit: \"\")\n
\                   (\"LIST_MAN\" implicit: 0)\n
\                 )\n
\               )\n
\;;; ........................................................\n
\"
    silent! execute '%s/___ZZZ_ZZZ___/\\/g'
    call SUBS_name_init()
endfunction

